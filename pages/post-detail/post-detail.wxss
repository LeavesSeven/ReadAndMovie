/* pages/post-detail/post-detail.wxss */

.container{
  display:flex; /* flex布局 */
  flex-direction: column; /* 垂直flex布局 */
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-date{
  display: flex;
  flex-direction: row; /* 水平flex布局 */
  align-items: center; /* 垂直居中 */
  margin-top:20rpx; /* 上间隔 */
  margin-left: 30rpx; /* 左间隔 */
}

.avater{
  width: 64rpx;
  height: 64rpx;
}

.author{
  font-size: 30rpx; /* 字体大小 */
  font-weight: 300; /* 字宽 */
  margin-left: 20rpx;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date{
  font-size: 24srpx;
  margin-left: 30rpx;
  color: #999;
}

.title{
  letter-spacing: 2px; /* 字间距 */
  margin-left: 40rpx; 
  font-size: 30rpx;
  font-weight: 700;
  margin-top: 30rpx;
  color: #4b556c;
}

.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;  /* 背景色 */
  position: absolute; /* 横线脱离文档 */
  z-index: -99; /*  */
}

.circle-img{
  width: 90rpx;
  height: 90rpx;
}

.circle{
  display: flex;
  width: 660rpx; /* 容器宽度，有宽度才可以偏移 */
  flex-direction: row;
  justify-content: flex-end; /* 容器尾端偏移 */
}

.tool{
  display: flex;
  flex-direction: column; /* 列排布 */
  align-items: center; /* 交叉轴上居中 */
  justify-content: center; /* 主轴居中 */
  margin-top: 20rpx;
}

.circle image{
  width: 90rpx;
  height: 90rpx;
}

.share-img{
  margin-left: 30rpx;
}

.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx; /* 行高 */
  letter-spacing: 2px; /* 字间距 */
}