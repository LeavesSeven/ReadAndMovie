
swiper{
  width: 100%;
  height: 460rpx
}

swiper image{
  width: 100%;
  height: 460rpx
}

.scroll{
  white-space: nowrap;
  width: 100%;
  position: absolute;left: 0; right: 0;
  background: #FFFFFF;
  padding: 20rpx 0;
}

.con-text-a{
  color: #292c33;
  font-size: 30rpx;
  font-weight: bold;
}

.con-text-b{
  color: #9ea0a5;
  font-size: 23rpx;
}

.list-cont{
  width: 180rpx;
  display:inline-block;
  text-align: center;
}

.is_active{
  background-image: linear-gradient(to right, #ccffff 0%, #ffcc00 100%);
  border-top-right-radius: 50rpx;
}

.list-cont .normal{
  width: 180rpx;
  display:inline-block;
  text-align: center;
  background-image: linear-gradient(to right, #ccffff 0%, #ffcc00 100%);
  border-top-right-radius: 50rpx;
}

